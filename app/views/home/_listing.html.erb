<h1>Listing Vehicles</h1>
<%= search_form_for @search, remote:true do |f|%>
	<%= f.condition_fields do |c|%>
		<div class="form-group">
			<%= c.attribute_fields do |a|%>
				<%= a.attribute_select%>
			<%end%>
			<%= c.predicate_select %>
			<%= c.value_fields do |v|%>
				<%= v.text_field :value%>
			<%end%>
		</div>
	<%end%>
<% end %>
<div id="listing">
	<table class="table">
		<thead>
			<tr>
				<th scope="col" style="width:3%"><%= sort_link(@search, :id, "#",{} ,remote: true) %></th>
				<th scope="col" style="width:10%"><%= sort_link(@search, :make, "Make", {},remote: true) %></th>
				<th scope="col" style="width:20%"><%= sort_link(@search, :model, "Model", {},remote: true) %></th>
				<th scope="col" style="width:15%"><%= sort_link(@search, :series, "Series", {},remote: true) %></th>
				<th scope="col" style="width:4%"><%= sort_link(@search, :year, "Year", {},remote: true) %></th>
				<th scope="col" style="width:8%"><%= sort_link(@search, :price, "Price", {},remote: true) %></th>
				<th scope="col" style="width:20%"><%= sort_link(@search, :body, "Body", {},remote: true) %></th>
				<th scope="col" style="width:10%"><%= sort_link(@search, :mileage, "Mileage", {},remote: true) %></th>
				<th scope="col" style="width:10%"><%= sort_link(@search, :extreior, "Exterior", {},remote: true) %></th>
			</tr>
		</thead>
		<tbody>
			<%= render @vehicles%>
		</tbody>
	</table>
</div>
<%= paginate @vehicles, remote:true%>
<script type="text/javascript">
	$(document).ready(function(){
		$(document).find('select').attr('class','form-control').css('width','30%').css('display','inline');
		$(document).find('input').attr('class','form-control').css('width','39%').css('display','inline');
	});
</script>